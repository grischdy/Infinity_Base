<h1>Projektleiterseite</h1>

<hr />

<form asp-action="CreateEdit">
    <button type="submit" class="btn btn-primary">+ Create Project</button>
</form>


<hr />


<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Projekt Nummer</th>
            <th>Name</th>
            <th>Kunde</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>

    <tbody>
        @{ foreach (Projekt projekt in ViewBag.Projekte)
            {
                <tr>
                    <td>
                        @projekt.Id

                    </td>
                    <td>
                        @projekt.ProjektNummer
                    </td>
                    <td>
                        @projekt.Name
                    </td>
                    <td>
                        @projekt.Kunde
                    </td>
                    <td>
                        <form asp-action="CreateEdit" asp-route-id="@projekt.Id">
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>

                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="DeleteProjekt" asp-route-id="@projekt.Id">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </td>

                </tr>
            }
        }
    </tbody>
</table>