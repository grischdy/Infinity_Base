@model Projekt


<div class="card">
    <div class="card-header">
        <h5>Create or Edit an Project</h5>
    </div>

    <form asp-action="CreateEditProjekt" method="post">
        <div class="card-body">
            <div class="row">
                <div class="col form-group">
                    <input hidden asp-for="Id" placeholder="ID" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="ProjektNummer" placeholder="Projektnummer" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Kunde" placeholder="Kunde" class="form-control" />
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">SAVE</button>
        </div>
    </form>

</div>